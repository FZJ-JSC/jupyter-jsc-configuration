#!/bin/bash
mount | grep "/mnt/B2DROP" > /dev/null
EC=$?
if [[ $EC -eq 0 ]]; then
  echo "/mnt/B2DROP is already mounted."
else
  mount /mnt/B2DROP
  cat /home/jovyan/.davfs2/secrets | grep "https://b2drop.eudat.eu/remote.php/webdav" &> /dev/null
  EC=$?
  if [[ ! $EC -eq 0 ]]; then
    echo "To mount B2DROP automatically add your credentials to /home/jovyan/.davfs2/secrets:"
    echo "https://b2drop.eudat.eu/remote.php/webdav USERNAME PASSWORD"
  fi
fi

