#!/bin/bash
mount | grep "/mnt/JUDAC" > /dev/null
EC=$?
if [[ $EC -eq 0 ]];then
    echo "/mnt/JUDAC is already mounted"
else
    CMD=$(python3 /opt/apps/bin/bin/.uftp.py)
    $CMD /mnt/JUDAC 2>/dev/null
    EC=$?
    if [[ $EC -eq 0 ]]; then
        if [[ -L /home/jovyan/JUDAC && -d /home/jovyan/JUDAC ]]; then
            :
        else
            ln -s /mnt/JUDAC /home/jovyan/JUDAC
            EC=$?
            if [[ $EC -eq 0 ]]; then
                echo "JUDAC mounted to /home/jovyan/JUDAC"
            else
                echo "JUDAC mounted to /mnt/JUDAC"
            fi
        fi
    else
        echo "JUDAC mount failed."
    fi
fi
